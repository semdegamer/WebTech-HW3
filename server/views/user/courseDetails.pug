extends defaultUser

block append vars
  - var title = course.name
  - styles.push("user/courses")
  - var navSelected = "courses"
  - var pathDepth = 3;

block main
  main.main-courses
    if course
      h2= course.name
      p= course.description

      h3 Enrolled Students:
      if students.length > 0
        each student in students
          a.course-button(href='#')
            img.profile-pic(
              src=student.photoLink || '/images/default-profile.png', 
              alt=student.firstName + ' ' + student.lastName
            )
            div.course-button-content
              h4= student.firstName + ' ' + student.lastName
              //- Only show the friend request button if no pending request and not already friends
              if student.isFriend
                button.friend-request-btn(
                  disabled,
                  type="button"
                ) You're already friends :D
              else if student.requestSent
                button.friend-request-btn(
                  disabled,
                  type="button"
                ) Request Sent!
              else
                button.friend-request-btn(
                  data-student-id=student.studentId,
                  type="button"
                ) Send Friend Request
      else
        p.no-students No students enrolled in this course.

    else
      p Course details not available.

    if error
      p.error-message= error

  script.
    // script for sending friend requests
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.friend-request-btn').forEach(function (btn) {
        // Only attach listener if button is not disabled
        if (!btn.disabled) {
          btn.addEventListener('click', function () {
            const studentId = btn.getAttribute('data-student-id');
            const courseId = window.location.pathname.split('/').pop();

            fetch(`/user/courses/${courseId}/friend-request`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
              },
              body: `studentId=${encodeURIComponent(studentId)}`,
            })
            .then(res => {
              if (res.ok) {
                btn.textContent = 'Request Sent!';
                btn.disabled = true;
              } else {
                alert('Error sending friend request');
              }
            });
          });
        }
      });
    });
